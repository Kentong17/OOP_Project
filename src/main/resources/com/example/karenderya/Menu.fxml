<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720" prefWidth="1280"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.karenderya.MenuController">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox alignment="TOP_CENTER"
              prefWidth="200"
              spacing="20"
              style="-fx-background-color: #f2f2f2; -fx-padding: 20;">

            <Label text="Welcome!&#10;Admin"
                   style="-fx-font-size: 16; -fx-font-weight: bold;" />

            <VBox alignment="TOP_LEFT"
                  spacing="10"
                  style="-fx-padding: 20;">

                <Button prefWidth="140"
                        text="MENU"
                        style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-font-weight: bold;" />

                <Button fx:id="InventoryBtn"
                        onAction="#handleInventoryClick"
                        prefWidth="140"
                        text="INVENTORY"
                        style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-font-weight: bold;" />

                <Button fx:id="CustomerBtn"
                        onAction="#handleCustomerClick"
                        prefWidth="140"
                        text="CUSTOMER"
                        style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-font-weight: bold;" />
            </VBox>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <HBox alignment="TOP_CENTER"
              spacing="20"
              style="-fx-padding: 20;"
              prefWidth="1080">

            <!-- MENU ITEMS PANEL -->
            <VBox prefWidth="700"
                  prefHeight="650"
                  spacing="15"
                  style="-fx-padding: 25; -fx-background-color: #ffffff;
                         -fx-background-radius: 12;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10,0,0,3);">

                <Label text="Shop Management"
                       style="-fx-font-size: 20; -fx-font-weight: bold;" />

                <FlowPane fx:id="menuFlow"
                          hgap="20" vgap="20"
                          prefWrapLength="600"
                          style="-fx-padding: 10;" />
            </VBox>

            <Separator orientation="VERTICAL" prefHeight="600" />

            <!-- ORDER SUMMARY -->
            <VBox alignment="TOP_CENTER"
                  prefWidth="250"
                  prefHeight="650"
                  spacing="15"
                  style="-fx-padding: 20; -fx-background-color: #f8f8f8;
                         -fx-background-radius: 12;">

                <Label text="Added Orders"
                       style="-fx-font-size: 16; -fx-font-weight: bold;" />

                <TableView fx:id="orderTable" prefHeight="450">
                    <columns>
                        <TableColumn fx:id="itemColumn" text="Item" prefWidth="140"/>
                        <TableColumn fx:id="priceColumn" text="Price" prefWidth="80"/>
                    </columns>
                </TableView>

                <Label fx:id="totalLabel"
                       text="Total: $0"
                       style="-fx-font-size: 14; -fx-font-weight: bold;" />

                <HBox alignment="CENTER" spacing="10">
                    <Button fx:id="removeButton" text="Remove Order"/>
                    <Button fx:id="confirmButton" text="Confirm Order"/>
                </HBox>

            </VBox>
        </HBox>
    </center>
</BorderPane>
