<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720" prefWidth="1280"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.karenderya.InventoryController">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox alignment="TOP_CENTER"
              prefWidth="200"
              spacing="20"
              style="-fx-background-color: #f2f2f2; -fx-padding: 20;">

            <Label text="Welcome!&#10;Admin"
                   style="-fx-font-size: 16; -fx-font-weight: bold;" />

            <VBox alignment="TOP_LEFT"
                  spacing="10"
                  style="-fx-padding: 20;">

                <Button fx:id="MenuBtn"
                        onAction="#handleMenuClick"
                        prefWidth="140"
                        text="MENU"
                        style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-font-weight: bold;" />

                <Button prefWidth="140"
                        text="INVENTORY"
                        style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-font-weight: bold;" />

                <Button fx:id="CustomerBtn"
                        onAction="#handleCustomerClick"
                        prefWidth="140"
                        text="CUSTOMER"
                        style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-font-weight: bold;" />
            </VBox>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <VBox prefWidth="1080"
              prefHeight="700"
              spacing="15"
              style="-fx-padding: 20;">

            <Label text="Shop Management"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <!-- PRODUCT TABLE -->
            <TableView fx:id="productTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colName" prefWidth="120" text="Product Name" />
                    <TableColumn fx:id="colType" prefWidth="100" text="Type" />
                    <TableColumn fx:id="colPrice" prefWidth="80" text="Price" />
                    <TableColumn fx:id="colStock" prefWidth="80" text="Stock" />
                    <TableColumn fx:id="colStatus" prefWidth="100" text="Status" />
                    <TableColumn fx:id="colDate" prefWidth="120" text="Date" />
                </columns>
            </TableView>

            <!-- FORM -->
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50" />
                    <ColumnConstraints percentWidth="50" />
                </columnConstraints>

                <Label text="Product Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="tfName" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="tfType" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="tfPrice" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Stock:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="tfStock" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="tfStatus" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <TextField fx:id="tfDate" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            </GridPane>

            <!-- BUTTONS -->
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnAdd" text="Add" onAction="#addProduct"/>
                <Button fx:id="btnUpdate" text="Update" onAction="#updateProduct"/>
                <Button fx:id="btnClear" text="Clear" onAction="#clearFields"/>
                <Button fx:id="btnDelete" text="Delete" onAction="#deleteProduct"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>
