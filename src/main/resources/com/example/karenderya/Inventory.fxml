<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="668.0" prefWidth="988.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.karenderya.InventoryController">

    <!-- LEFT SIDE MENU -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200.0" spacing="20" style="-fx-background-color: #f2f2f2; -fx-padding: 20;">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-alignment: center;" text="Welcome!&#10;Admin" />
            <VBox alignment="TOP_LEFT" spacing="10" style="-fx-padding: 20;">
                <Button fx:id="MenuBtn" onAction="#handleMenuClick" prefWidth="140" style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-font-weight: bold;" text="MENU" />
                <Button prefWidth="140" style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-font-weight: bold;" text="INVENTORY" />
                <Button fx:id="CustomerBtn" onAction="#handleCustomerClick" prefWidth="140" style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-font-weight: bold;" text="CUSTOMER" />
            </VBox>
        </VBox>
    </left>


    <!-- MAIN CENTER CONTENT -->
    <center>
        <VBox prefHeight="642.0" prefWidth="840.0" spacing="15" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Shop Management" />

            <!-- TABLE -->
            <TableView fx:id="productTable" prefHeight="250">
                <columns>
                    <TableColumn fx:id="colName" prefWidth="120" text="Product Name" />
                    <TableColumn fx:id="colType" prefWidth="100" text="Type" />
                    <TableColumn fx:id="colPrice" prefWidth="80" text="Price" />
                    <TableColumn fx:id="colStock" prefWidth="80" text="Stock" />
                    <TableColumn fx:id="colStatus" prefWidth="100" text="Status" />
                    <TableColumn fx:id="colDate" prefWidth="120" text="Date" />
                </columns>
            </TableView>

            <!-- FORM INPUTS -->
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50" />
                    <ColumnConstraints percentWidth="50" />
                </columnConstraints>

                <Label text="Product Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="tfName" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="tfType" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="tfPrice" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Stock:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="tfStock" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="tfStatus" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <TextField fx:id="tfDate" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>

            <!-- BUTTONS -->
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnAdd" text="Add" />
                <Button fx:id="btnUpdate" text="Update" />
                <Button fx:id="btnClear" text="Clear" />
                <Button fx:id="btnDelete" text="Delete" />
                <Button fx:id="btnImport" text="Import" />
            </HBox>
        </VBox>
    </center>

</BorderPane>
