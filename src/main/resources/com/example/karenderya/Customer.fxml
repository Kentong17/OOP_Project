<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720" prefWidth="1280" style="-fx-background-color: #1f1f1f;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.karenderya.CustomerController">

    <!-- TOP BAR -->


    <!-- LEFT SIDEBAR -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200.0" spacing="20" style="-fx-background-color: #f2f2f2; -fx-padding: 20;">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-alignment: center;" text="Welcome!&#10;Admin" />
            <VBox alignment="TOP_LEFT" spacing="10" style="-fx-padding: 20;">
                <Button fx:id="MenuBtn" onAction="#handleMenuClick" prefWidth="140" style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-font-weight: bold;" text="MENU" />
                <Button fx:id="InventoryBtn" onAction="#handleInventoryClick" prefWidth="140" style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-font-weight: bold;" text="INVENTORY" />
                <Button prefWidth="140" style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-font-weight: bold;" text="CUSTOMER" />
            </VBox>
        </VBox>
    </left>


    <!-- CENTER CONTENT -->
    <center>
        <VBox alignment="TOP_CENTER" style="-fx-padding: 30;">
            <StackPane style="-fx-background-color: #e9e9e9; -fx-background-radius: 20; -fx-padding: 25;">

                <!-- Table -->
                <TableView fx:id="customerTable" prefHeight="500" prefWidth="900">
                    <columns>
                        <TableColumn fx:id="colCustomer" prefWidth="150" text="Customer" />
                        <TableColumn fx:id="colTotal" prefWidth="150" text="Total" />
                        <TableColumn fx:id="colCashier" prefWidth="150" text="Cashier" />
                        <TableColumn fx:id="colDate" prefWidth="200" text="Date" />
                    </columns>
                </TableView>

            </StackPane>
        </VBox>
    </center>
</BorderPane>
