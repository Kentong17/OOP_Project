<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720" prefWidth="1280"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.karenderya.CustomerController">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox alignment="TOP_CENTER"
              prefWidth="200"
              spacing="20"
              style="-fx-background-color: #f2f2f2; -fx-padding: 20;">

            <Label style="-fx-font-size: 16; -fx-font-weight: bold;"
                   text="Welcome!&#10;Admin" />

            <VBox alignment="TOP_LEFT"
                  spacing="10"
                  style="-fx-padding: 20;">

                <Button fx:id="MenuBtn"
                        onAction="#handleMenuClick"
                        prefWidth="140"
                        text="MENU"
                        style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-font-weight: bold;" />

                <Button fx:id="InventoryBtn"
                        onAction="#handleInventoryClick"
                        prefWidth="140"
                        text="INVENTORY"
                        style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-font-weight: bold;" />

                <Button prefWidth="140"
                        text="CUSTOMER"
                        style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-font-weight: bold;" />
            </VBox>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <VBox alignment="TOP_CENTER"
              prefWidth="1080"
              prefHeight="700"
              spacing="20"
              style="-fx-padding: 30;">

            <!-- TOTAL INCOME LABEL -->
            <Label fx:id="totalIncomeLabel"
                   text="Total Income: ₱0"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <!-- CLEAR ALL BUTTON -->
            <Button fx:id="clearAllBtn"
                    text="CLEAR ALL"
                    onAction="#handleClearAll"
                    prefWidth="200"
                    style="-fx-background-color: #ff4d4d; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" />

            <!-- TABLE CONTAINER -->
            <StackPane prefWidth="1000"
                       prefHeight="550"
                       style="-fx-background-color: #e9e9e9;
                              -fx-background-radius: 20;
                              -fx-padding: 25;">
                <TableView fx:id="customerTable"
                           prefHeight="550"
                           prefWidth="900">
                    <columns>
                        <TableColumn fx:id="itemColumn"
                                     prefWidth="300"
                                     text="Item" />
                        <TableColumn fx:id="priceColumn"
                                     prefWidth="200"
                                     text="Price (₱)" />
                    </columns>
                </TableView>
            </StackPane>

        </VBox>
    </center>

</BorderPane>
