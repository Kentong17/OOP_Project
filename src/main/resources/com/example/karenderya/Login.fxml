<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: #E9E9F1;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.karenderya.LoginController">

    <!-- Center the login card -->
    <center>
        <StackPane alignment="CENTER">
            <VBox alignment="CENTER" prefHeight="617.0" prefWidth="771.0" spacing="25" style="-fx-background-color: white;                               -fx-background-radius: 15;                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 3);                               -fx-padding: 30;">
                <Text strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="252.13671875">
                    <font>
                        <Font name="Times New Roman" size="24.0" />
                    </font>
                </Text>

                <!-- Header row with colored dots (top-right corner) -->
                <HBox alignment="TOP_RIGHT" spacing="10" style="-fx-padding: 0 0 10 0;">
                    <Circle fill="#FFD65B" radius="8" /> <!-- yellow -->
                    <Circle fill="#FF5F56" radius="8" /> <!-- red -->
                </HBox>

                <!-- Login title -->
                <Label style="-fx-font-size: 28px; -fx-text-fill: black;" text="Login" />

                <!-- Access Code field -->
                <TextField fx:id="accessCodeField" prefHeight="40" prefWidth="350" promptText="Access Code" style="-fx-background-radius: 10;                                    -fx-background-color: #F3F3F3;                                    -fx-border-color: transparent;                                    -fx-padding: 10 15 10 15;" />

                <!-- Sign In button -->
                <Button fx:id="signInButton" onAction="#handleSignIn" prefHeight="40" prefWidth="200" style="-fx-background-radius: 10;                                 -fx-background-color: #3399FF;                                 -fx-text-fill: white;                                 -fx-font-size: 16px;" text="SIGN IN" />
            </VBox>
        </StackPane>
    </center>
</BorderPane>